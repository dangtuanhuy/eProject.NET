@using KarnelTravel.Models;
@model IEnumerable<Hotel>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="section-title text-center">
            <h2>Our most new Hotel</h2>
            @*<p>Lorem ipsum dolor sit amet consectetur adipiscing elit Etiam at ipsum at ligula vestibulum sodales Sed luctus orci vel nibh aliquam laoreet Aenean accumsan </p>*@
        </div>
    </div>
</div>
@foreach (var item in Model.Take(6))
{
    <div class="col-md-4 col-sm-6 co-lxs-12 single-item">
        <div class="single-hotels" style="width: 345px;height: 347px;">
            <div class="hotel-image" style="width: 345px;height: 229px;">
                <img src="~/myImg/Hotels/@item.ImgHotels.FirstOrDefault().Img_Hotels" alt="" class="border-raduis-3">
            </div>
            <div class="hotel-description">
                <h3>@item.Hotel_Name</h3>
                <h4>@item.Hotel_Address</h4>
                <div class="hotet-book-btn">
                    <a href="#" class="travel-primary-btn hvr-shutter-out-horizontal">Show Details</a>
                </div>
            </div>
        </div>
    </div>
}