@using KarnelTravel.Models;
@model IEnumerable<TouristSpot>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="section-title text-center">
            <h2>Our most new packges</h2>
            @*<p>Lorem ipsum dolor sit amet consectetur adipiscing elit Etiam at ipsum at ligula vestibulum sodales Sed luctus orci vel nibh aliquam laoreet Aenean accumsan </p>*@
        </div>
    </div>
</div>
@foreach (var item in Model.Take(6))
{
<div class="col-md-4 col-sm-6 co-lxs-12 single-item">
    <div class="single-hotels" style="width: 345px;height: 347px;">
        <div class="hotel-image" style="width: 345px;height: 229px;">
            <img src="~/myImg/TouristSpot/@item.ImgTouristSpots.FirstOrDefault().Img_TouristSpot" alt="" class="border-raduis-3">
        </div>
        <div class="hotel-description">
            <h3>@item.TouristSpot_Name</h3>
            <h4>@item.TouristSpot_Specific</h4>
            <h4>Limit: @item.TouristSpot_Limit</h4>

            <div class="hotet-book-btn">
                <a href="@Url.Action("ThemGioHang", "Cart", new { @TouristSpotId = item.TouristSpot_Id, strUrl = Request.Url.ToString()})" class="travel-primary-btn hvr-shutter-out-horizontal">Show Details</a>
            </div>
        </div>
    </div>
</div>
}