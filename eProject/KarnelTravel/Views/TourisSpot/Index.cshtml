<!-- popular destination strat -->
<section class="blog-contents-version-one pt-100 pb-70">
    <div class="container">
        @using (Html.BeginForm())
        {

            <div>Find by Name, by Address or by Region:</div>
            <div class="form-group row ">
                <div class="col-md-4">
                    <div class="input-group">
                        @Html.TextBox("SearchString", null, new { @class = "form-control", data_toggle = "tooltip", @title = "Enter Information Restaurant with Name" })
                        <span class="input-group-addon">
                            <i class="fa fa-search"></i>
                            <input type="submit" value="Search" />
                        </span>
                    </div>
                </div>

                <div class="col-md-8">

                </div>
            </div>
        }
        <!-- single restaurant -->
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 co-lxs-12 single-item">
                <div class="single-hotels" style="width: 345px;height: 347px;">
                    <div class="hotel-image" style="width: 345px;height: 229px;">
                        <img src="~/myImg/TouristSpot/@item.ImgTouristSpots.FirstOrDefault().Img_TouristSpot" alt="" class="border-raduis-3">
                    </div>
                    <div class="hotel-description">
                        <h4>@item.TouristSpot_Name</h4>
                        <p>@item.TouristSpot_Specific</p>
                        <p>@item.Location.Location_Name</p>

                        <div class="hotet-book-btn">
                            <a href="#" class="travel-primary-btn hvr-shutter-out-horizontal">Show Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!--End single restaurant -->

    </div>
    </div>
</section>
<div class="content-pagenation text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index",
     new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>
