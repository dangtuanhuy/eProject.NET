@model IEnumerable<KarnelTravel.Models.Trip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}

<h2 class="text-center">Management Trips</h2>


<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>

            <th>
               Customer
            </th>
            <th>
                Phone
            </th>
            <th>
                Address
            </th>
            <th>
                Status
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trip_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trip_Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trip_Address)
                </td>
                <td class="text-center">
                    @if (@item.Trip_Status == true)
                    {
                        <a href="@Url.Action("UpdateStatus", new { id = @item.Trip_Id })" onclick="return confirm('Are you sure update?');" class="btn btn-info">Delivered</a>
                    }
                    else
                    {
                        <a href="@Url.Action("UpdateStatus", new { id = @item.Trip_Id })" onclick="return confirm('Are you sure update?');" class="btn btn-danger">UnDelivered</a>
                    }
                </td>

                

            </tr>
        }
    </tbody>
</table>
