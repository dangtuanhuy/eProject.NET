@model IEnumerable<KarnelTravel.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}

<h2 class="text-center">Feed Back</h2>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SenderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedBackTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedBackContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Create_on)
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderMail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedBackTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedBackContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Create_on)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Feedbacks", new { id = item.FeedbackId })" class="btn btn-success">
                        <i class="fa fa-flash"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "Feedbacks", new { id = item.FeedbackId})" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
