@model IEnumerable<KarnelTravel.Models.Transportation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}

<h2 class="text-center">Transportations</h2>

<p>
    <a href="@Url.Action("Create", "Transportations")" class="btn btn-info">
        Create
    </a>
</p>
@Html.Raw(TempData["msg1"])
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Transportation_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transportation_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transportation_Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristSpot.TouristSpot_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th class="text-center">
                    @if (String.IsNullOrEmpty(item.Transportation_Img) == false)
                    {
                        <img style="width: 100px" src="@Url.Content(item.Transportation_Img)" />
                    }
                </th>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Transportation_Id)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Transportation_Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Transportation_Details)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.TouristSpot.TouristSpot_Name)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("UploadTransportations", "Transportations", new { id = item.Transportation_Id })" class="btn btn-info">
                        <i class="fa fa-image"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Edit", "Transportations", new { id = item.Transportation_Id })" class="btn btn-success">
                        <i class="fa fa-pencil"></i>
                        <span>

                        </span>
                    </a>
                    |

                    <a href="@Url.Action("Delete", "Transportations", new { id = item.Transportation_Id })" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
