@model IEnumerable<KarnelTravel.Models.Hotel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}
<h2 class="text-center">HOTEL</h2>

<p>
    <a href="@Url.Action("Create", "Hotels")" class="btn btn-info">
        Create
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hotel_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristSpot.TouristSpot_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TouristSpot.TouristSpot_Name)
                </td>
                <td>
                    <a href="@Url.Action("UploadHotels", "Hotels", new { id = item.Hotel_Id })" class="btn btn-info">
                        <i class="fa fa-image"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Edit", "Hotels", new { id = item.Hotel_Id })" class="btn btn-success">
                        <i class="fa fa-pencil"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "Hotels", new { id = item.Hotel_Id})" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


