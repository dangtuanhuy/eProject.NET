@model IEnumerable<KarnelTravel.Models.Restaurant>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}
<h2 class="text-center">Restaurant</h2>

<p>
    <a href="@Url.Action("Create", "Restaurants")" class="btn btn-info">
        Create
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.Restaurant_Name)
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.Restaurant_Address)
            </th>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.Restaurant_Status)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(model => model.Restaurant_Description)
            </th>

            <th class="col-md-2"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant_Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Restaurant_Description)
                </td>
                

                <td>
                    <a href="@Url.Action("UploadRestaurants", "Restaurants", new { id = item.Restaurant_Code })" class="btn btn-info">
                        <i class="fa fa-image"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Edit", "Restaurants", new { id = item.Restaurant_Code })" class="btn btn-success">
                        <i class="fa fa-flash"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "Restaurants", new { id = item.Restaurant_Code })" class="btn btn-primary">
                        <i class="fa fa-list-alt"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "Restaurants", new { id = item.Restaurant_Code})" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
