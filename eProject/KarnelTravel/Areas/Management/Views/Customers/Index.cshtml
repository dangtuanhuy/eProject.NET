@model IEnumerable<KarnelTravel.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Management/Views/Shared/_AdministratorLayout.cshtml";
}

<p>
    <a href="@Url.Action("Create", "Customers")" class="btn btn-info">
        Create
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Customer_LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Bithday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_Possport)
            </th>
            <th></th>
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Customer_LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Bithday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_Possport)
            </td>
            <td>

                <a href="@Url.Action("Edit", "Customers", new { id = item.Customer_Id })" class="btn btn-success">
                    <i class="fa fa-flash"></i>
                    <span>

                    </span>
                </a>
                |
                <a href="@Url.Action("Delete", "Customers", new { id = item.Customer_Id})" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                    <span>

                    </span>
                </a>
            <td>
                @if (@item.Customer_Gender == true)
                {
                    <button id="@item.Customer_Id" class="btn btn-info" onclick="UpdateStatus(this.id)">@item.Customer_Gender</button>
                }
                else
                {
                    <button id="@item.Customer_Id class="btn btn-danger" onclick="UpdateStatus(this.id)">@item.Customer_Gender</button>
                }
            </td>
            </td>
        </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    function UpdateStatus(id) {
        $.ajax({
            url: "/Customers/UpdateStatus",
            data: { id: id },
            type: "POST",
            success: function (data) {
                //$("#"+id).attr("disabled","disabled");
                $("#" + id).prop('disabled', true);//disabled is a property not an attribute
                alert("Cập nhật status thành công!");
                window.location.reload();
            },
            error: function (e) {
                bootbox.alert(e.responseText);
            }
        });
    }
</script>
