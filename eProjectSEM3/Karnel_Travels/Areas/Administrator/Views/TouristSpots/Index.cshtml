@model IEnumerable<Karnel_Travels.Models.TouristSpot>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "TouristSpots")" class="btn btn-info">
        Create
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TouristSpot_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristSpot_Specific)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TouristSpot_Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location.Location_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TouristSpot_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TouristSpot_Specific)
                </td>
                <td>
                    @if (String.IsNullOrEmpty(item.TouristSpot_Img) == false)
                    {
                        <img style="width: 100px" src="@Url.Content(item.TouristSpot_Img)" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.Location_Name)
                </td>
                <td>
                    <a href="@Url.Action("UploadTouristSpot", "TouristSpots", new { id = item.TouristSpot_Id })" class="btn btn-info">
                        <i class="fa fa-image"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Edit", "TouristSpots", new { id = item.TouristSpot_Id })" class="btn btn-success">
                        <i class="fa fa-pencil"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Details", "TouristSpots", new { id = item.TouristSpot_Id })" class="btn btn-primary">
                        <i class="fa fa-list-alt"></i>
                        <span>

                        </span>
                    </a>
                    |
                    <a href="@Url.Action("Delete", "TouristSpots", new { id = item.TouristSpot_Id})" class="btn btn-danger">
                        <i class="fa fa-trash-o"></i>
                        <span>

                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
