@model IEnumerable<Karnel_Travels.Models.Trip>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h2 class="text-center">Trip</h2>

<p>
    <a href="@Url.Action("Create", "Trips")" class="btn btn-info">
        Create
    </a>
</p>
<table class="table table-striped table-bordered" id="tablefillset">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Trip_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trip_Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trip_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip_Details)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Trips", new { id = item.Trip_Id })" class="btn btn-success">
                    <i class="fa fa-pencil"></i>
                    <span>

                    </span>
                </a>
                |
                <a href="@Url.Action("Details", "Trips", new { id = item.Trip_Id})" class="btn btn-primary">
                    <i class="fa fa-list-alt"></i>
                    <span>

                    </span>
                </a>
                |
                <a href="@Url.Action("Delete", "Trips", new { id = item.Trip_Id})" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                    <span>

                    </span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
