@model IEnumerable<Karnel_Travels.Models.Trip>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trip_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip_Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Trip_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trip_Details)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Trip_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Trip_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Trip_Id })
        </td>
    </tr>
}

</table>
