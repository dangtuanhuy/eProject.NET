@model IEnumerable<Karnel_Travels.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SenderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SenderMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeedBackTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FeedBackContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Create_on)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SenderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SenderMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeedBackTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeedBackContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Create_on)
            </td>
            <td>
                <button id="@item.FeedbackId" class="btn btn-info" onclick="UpdateStatus(this.id)">Update status</button>
                @Html.ActionLink("Edit", "Edit", new { id = item.FeedbackId }) |
                @Html.ActionLink("Details", "Details", new { id = item.FeedbackId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.FeedbackId })|
            </td>
        </tr>
    }

</table>
<script type="text/javascript">
    function UpdateStatus(id) {
        $.ajax({
            url: "/Feedbacks/UpdateStatus",
            data: { id: id },
            type: "POST",
            success: function (data) {
                //$("#" + id).attr("disabled", "disabled");
                $("#" + id).prop('disabled', true);//disabled is a property not an attribute
                bootbox.alert("Cập nhật status thành công!");
            },
            error: function (e) {
                bootbox.alert(e.responseText);
            }
        });
    }
</script>

