}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Food_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Cost)
        </th>
        <th>
