@model IEnumerable<Karnel_Travels.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdministratorLayout.cshtml";
}

<h2 class="text-center">Room</h2>

<p>
    <a href="@Url.Action("Create", "Products")" class="btn btn-info">
        Create
    </a>
</p>
 <table class="table table-striped table-bordered" id="tablefillset">
     <thead>
         <tr>
             <th>
                 @Html.DisplayNameFor(model => model.Room_Type)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Room_Name)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Room_Start)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Room_Stop)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Room_Cost)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.Hotel.Hotel_Name)
             </th>
             <th></th>
         </tr>
     </thead>

     <tbody>
         @foreach (var item in Model)
         {
             <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.Room_Type)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Room_Name)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Room_Start)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Room_Stop)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Room_Cost)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.Hotel.Hotel_Name)
                 </td>
                 <td>
                     <a href="@Url.Action("UploadVihicles", "Products", new { id = item.Room_Id })" class="btn btn-info">
                         <i class="fa fa-image"></i>
                         <span>

                         </span>
                     </a>
                     |
                     <a href="@Url.Action("Edit", "Vihicles", new { id = item.Room_Id })" class="btn btn-success">
                         <i class="fa fa-flash"></i>
                         <span>

                         </span>
                     </a>
                     |
                     <a href="@Url.Action("Details", "Vihicles", new { id = item.Room_Id })" class="btn btn-primary">
                         <i class="fa fa-list-alt"></i>
                         <span>

                         </span>
                     </a>
                     |
                     <a href="@Url.Action("Delete", "Vihicles", new { id = item.Room_Id})" class="btn btn-danger">
                         <i class="fa fa-trash-o"></i>
                         <span>

                         </span>
                     </a>
                 </td>
             </tr>
         }
        </tbody>
 </table>
